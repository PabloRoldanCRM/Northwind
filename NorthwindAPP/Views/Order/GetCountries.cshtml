@model IEnumerable<Country>

@{
    ViewData["Title"] = "GetCountries";
}

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "GetCustomersByCountry", new { countryName = item.Name })
                    </td>
                </tr>
            }
        </tbody>
    </table>
